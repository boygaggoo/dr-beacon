<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_patient_records"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PatientRecords"
    tools:showIn="@layout/patient_records">

    <TextView
        android:text="[m/f]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16pt"
        android:id="@+id/txt_sex"
        android:layout_below="@+id/lbl_Sex"
        android:layout_alignStart="@+id/lbl_Sex" />

    <TextView
        android:text="[name_surname]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16pt"
        android:id="@+id/txt_name"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scrollbars="vertical"
        android:layout_below="@+id/txt_sex"
        android:layout_alignStart="@+id/txt_sex"
        android:layout_marginTop="29dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:id="@+id/textView5"
        tools:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="dd/MM/yyyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16pt"
        android:id="@+id/txt_dob"
        android:layout_below="@+id/lbl_dob"
        android:layout_alignStart="@+id/lbl_dob" />

    <TextView
        android:text="Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_Sex"
        tools:text="Sex"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/txt_dob"
        android:layout_alignStart="@+id/txt_dob" />

    <TextView
        android:text="Date of Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/lbl_dob"
        tools:text="Date of Birth"
        android:layout_below="@+id/txt_name"
        android:layout_alignStart="@+id/txt_name" />


</RelativeLayout>
